#!/bin/bash


sysctl net.ipv4.conf.all.send_redirects | grep -E "^\s*net\.ipv4\.conf\.all\.send_redirects\s*=\s*0\s*$" \
&& \
sysctl net.ipv4.conf.default.send_redirects | grep -E "^\s*net\.ipv4\.conf\.default\.send_redirects\s*=\s*0\s*$" \
&& \
grep "net\.ipv4\.conf\.all\.send_redirects" /etc/sysctl.conf /etc/sysctl.d/* | grep -E "\s*net\.ipv4\.conf\.all\.send_redirects\s*=\s*0\s*$" \
&& \
grep "net\.ipv4\.conf\.default\.send_redirects" /etc/sysctl.conf /etc/sysctl.d/* | grep -E "\s*net\.ipv4\.conf\.default\.send_redirects\s*=\s*0\s*$" \
|| \
exit 1

