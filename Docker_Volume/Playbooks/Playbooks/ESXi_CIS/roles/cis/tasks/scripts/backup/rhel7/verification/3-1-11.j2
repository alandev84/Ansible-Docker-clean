#!/bin/bash

sysctl net.ipv4.icmp_ignore_bogus_error_responses | grep -E "^\s*net\.ipv4\.icmp_ignore_bogus_error_responses\s*=\s*1\s*$"  \
&& \
grep "net\.ipv4\.icmp_ignore_bogus_error_responses" /etc/sysctl.conf /etc/sysctl.d/* | grep -E "\s*net\.ipv4\.icmp_ignore_bogus_error_responses\s*=\s*1\s*$" \
|| \
exit 1


