#!/bin/bash

sysctl net.ipv4.icmp_echo_ignore_broadcasts | grep -E "^\s*net\.ipv4\.icmp_echo_ignore_broadcasts\s*=\s*1\s*$"  \
&& \
grep "net\.ipv4\.icmp_echo_ignore_broadcasts" /etc/sysctl.conf /etc/sysctl.d/* | grep -E "\s*net\.ipv4\.icmp_echo_ignore_broadcasts\s*=\s*1\s*$" \
|| \
exit 1


