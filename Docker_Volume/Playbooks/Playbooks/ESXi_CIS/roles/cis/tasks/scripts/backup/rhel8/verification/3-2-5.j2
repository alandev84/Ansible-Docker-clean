#!/bin/sh

sysctl net.ipv4.icmp_echo_ignore_broadcasts | grep -E '^\s*net.ipv4.icmp_echo_ignore_broadcasts\s*=\s*1\s*$' \
&& \
[ `grep -E -s "^\s*net\.ipv4\.icmp_echo_ignore_broadcasts\s*=\s*0" /etc/sysctl.conf /etc/sysctl.d/*.conf /usr/lib/sysctl.d/*.conf /run/sysctl.d/*.conf | wc -l` -eq 0 ] \
|| \
(echo 'broadcast ICMP requests settings are wrong' ; exit 1)
