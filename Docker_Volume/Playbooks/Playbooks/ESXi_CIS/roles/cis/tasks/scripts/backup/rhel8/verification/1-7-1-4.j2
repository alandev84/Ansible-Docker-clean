#!/bin/sh

grep -E '^\s*SELINUX\s*=\s*enforcing\s*' /etc/selinux/config \
&& \
sestatus  | grep -E '^SELinux\s+status:\s+enabled\s*$' \
&& \
sestatus  | grep -E '^Current\s+mode:\s+enforcing\s*$' \
&& \
sestatus  | grep -E '^Mode\s+from\s+config\s+file:\s+enforcing\s*$' \
|| \
(echo 'SELinux state is not enforcing.' ; exit 1)
